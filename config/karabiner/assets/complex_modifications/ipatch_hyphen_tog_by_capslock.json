{
  "title": "ipatch, change hyphen to underscore when capslock is enabled",
  "rules": [
    {
      "description": "hypen toggled to underscore when capslock enabled",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "underscore_mode",
                "value": 1
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "underscore_mode",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "equal_sign"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
