"""""""""""""""""""""""""""""
" conceal levels
""
" toggle between different conceal levels
function! ToggleConcealLevel()
    if &conceallevel == 0
        setlocal conceallevel=2
    elseif &conceallevel == 1
        setlocal conceallevel=0
    elseif &conceallevel == 2
        setlocal conceallevel=0
    endif
endfunction

nnoremap <silent> ` :call ToggleConcealLevel()<CR>

