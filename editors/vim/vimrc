  """""""""""""""""""""""""""""
  " plugin - vim-fugitive settings - https://github.com/tpope/vim-fugitive
  ""
  " NOTE: use `lightline.vim` for displaying git branch on status line 
  " set statusline=%{fugitive#statusline()}

  """""""""""""""""""""""""""""
  " plugin - lightline.vim
  ""
  let g:lightline = {
        \ 'active': {
        \ 'left': [ [ 'mode', 'paste' ],
        \           [ 'gitbranch', 'readonly', 'filename' ] ],
        \ },
        \ 'component_function': {
        \ 'gitbranch': 'fugitive#head',
        \ 'filename': 'LightlineFilename'
        \ },
        \ }

  function! LightlineFilename()
    let l:filename = expand('%:t') !=# '' ? expand('%:t') : '[No Name]'
    let l:modified = &modified ? ' +' : ''
    return l:filename . l:modified
  endfunction

  """""""""""""""
  " plugin - lightline - mode map
  " NOTE: abbreviations for mode maps
  " n - normal
  " i - insert
  " R - replace
  " v - visual
  " V - v-line
  " c - command
  " s - select
  " S - s-line
  " t - terminal
  ""
  let g:lightline.mode_map = {
        \ 'n' : 'N',
        \ 'i' : 'I',
        \ 'R' : 'REPLACE',
        \ 'v' : 'VISUAL',
        \ 'V' : 'V-LINE',
        \ "\<C-v>": 'V-BLOCK',
        \ 'c' : 'COMMAND',
        \ 's' : 'SELECT',
        \ 'S' : 'S-LINE',
        \ "\<C-s>": 'S-BLOCK',
        \ 't': 'TERMINAL',
        \ }

  """"""""""""""""""""""""""""""
  " plugin - commentary
  ""
  " Easy commenting of lines using tpope's plugin.
